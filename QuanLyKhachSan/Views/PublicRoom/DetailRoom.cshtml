
@{
    ViewBag.Title = "DetailRoom";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}


<div class="hero-wrap js-fullheight" style="background-image: url('https://allimages.sgp1.digitaloceanspaces.com/didaudalatcom/2019/08/Hinh-anh-Khach-san-LaDaLat-Tp-da-lat-di-dau-da-Lat.jpg'); height: 400px ">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Phòng</a></span> <span>Chi tiết</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@ViewBag.Room.name</h1>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.mess == "ErrorLogin")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Bạn cần phải đăng nhập',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}
@if (ViewBag.mess == "ErrorExist")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Phòng đã có người đặt vui lòng chọn phòng khác',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}
@if (ViewBag.mess == "Success")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 40PX;z-index: 2000;width: 300px">

        <script>
            swal({
                title: 'Đặt phòng thành công!',
                /* text: 'Redirecting...', */
                icon: 'success',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}
<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="s">
                            <div class="item">
                                <img src="/Content/images/@ViewBag.Room.image" class="hotel-img" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 hotel-single mt-4 mb-5 ">

                        <h2>@ViewBag.Room.name</h2>
                        @{
                            int priceNew = ViewBag.Room.cost - ViewBag.Room.cost * ViewBag.Room.discount / 100;
                        }
                        <h5>Giá ban đầu: @ViewBag.Room.cost VNĐ (- @ViewBag.Room.discount%)</h5>
                        <h5>@priceNew VNĐ </h5>
                        <p class="rate mb-5">
                            <span class="loc"><a href="#"><i class="icon-map"></i><span>@ViewBag.Room.Type.name</span></a></span>
                            <span class="star">
                                <i class="icon-star"></i>
                                <i class="icon-star"></i>
                                <i class="icon-star"></i>
                                <i class="icon-star"></i>
                                <i class="icon-star-o"></i>
                                <span>@ViewBag.Room.view lượt xem</span>
                        </p>
                        <p>@ViewBag.Room.description</p>
                    </div>


                    <div class="col-md-12 hotel-single  mb-5 mt-4">
                        <h4 class="mb-5">Booking</h4>
                        <form action="/PublicRoom/Booking" method="post">
                            <div class="fields">
                                <div class="row">
                                    <input type="hidden" name="idRoom" value="@ViewBag.Room.idRoom" />
                                    <div class="col-md-6">
                                        <label>Ngày tới:</label>
                                        <div class="form-group">
                                            <input type="date" class="form-control" name="checkInDate" required placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Ngày đi:</label>
                                        <div class="form-group">
                                            <input type="date"  name="checkOutDate" class="form-control" required placeholder="Date from">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="select-wrap one-third">
                                                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                                <select style="height:150px !important" id="" name="idService" class="form-control" multiple placeholder="Guest">
                                                    <option value="0">Chọn thêm dịch vụ</option>
                                                    @foreach (var item in ViewBag.ListService)
                                                    {
                                                        <option value="@item.idService">@item.name - @item.cost VNĐ</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Đặt phòng" class="btn btn-primary py-3">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>

                    <div class="col-md-12 hotel-single  mb-5 mt-5">
                        <h4 class="mb-4">Related Tours</h4>
                        <div class="row">
                            @foreach (var item in ViewBag.ListRoomRelated)
                            {
                                <div class="col-sm col-md-6 col-lg ftco-animate">
                                    <div class="destination">
                                        <a href="/PublicRoom/DetailRoom/@item.idRoom" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(/Content/images/@item.image);">
                                            <div class="icon d-flex justify-content-center align-items-center">
                                                <span class="icon-search2"></span>
                                            </div>
                                        </a>
                                        <div class="text p-3">
                                            <div class="d-flex">
                                                <div class="one">
                                                    <h3><a href="/PublicRoom/DetailRoom/@item.idRoom">@item.name</a></h3>
                                                    <p class="rate">
                                                        <i class="icon-star"></i>
                                                        <i class="icon-star"></i>
                                                        <i class="icon-star"></i>
                                                        <i class="icon-star"></i>
                                                        <i class="icon-star-o"></i>
                                                        <span>@item.view lượt xem</span>
                                                    </p>
                                                </div>
                                                @{
                                                    int price = item.cost - item.cost * item.discount / 100;
                                                }
                                                <span class="price">@price VNĐ</span>
                                            </div>
                                            @*   <p>Far far away, behind the word mountains, far from the countries</p>*@
                                            <p class="days"><span>@item.Type.name</span></p>
                                            <hr>
                                            <p class="bottom-area d-flex">
                                                <span>Giá ban đầu : @item.cost (@item.discount %)</span>
                                                <span class="ml-auto"><a href="#">Đặt phòng</a></span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section>

